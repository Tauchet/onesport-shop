<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Contacto - onesport</title>
        <link rel="stylesheet" href="/public/global.css" />
        <link rel="stylesheet" href="/public/formulario.css" />
        <script src='https://www.google.com/recaptcha/api.js'></script>
        <style>
            .middle-container {
                margin-top: 2rem;
            }
        </style>
    </head>
    <body>
        <div id="app">
            {{> header}}
              <div class="middle-container">
                  <div class="app-section-title">
                      <h1>Contacto</h1>
                  </div>
                  <form action="" method="POST">

                            {{#if notificacion}}
                                <div class="app-form-alert {{#if success}}success{{/if}}">
                                    <p>{{notificacion}}</p>
                                </div>
                            {{/if}}

                            <div class="app-form-input">
                                <label for="email">Correo Electronico</label>
                                <input name="email" type="email" required/>
                            </div>

                            <div class="app-form-input">
                                <label for="asunto">Asunto</label>
                                <input name="asunto" type="asunto" required/>
                            </div>

                            <div class="app-form-input">
                                <label for="descripcion">Descripci√≥n</label>
                                <textarea rows="4" name="descripcion" required></textarea>
                            </div>

                            <div style="text-align: center; display: flex; align-items: center; justify-content: center;">
                                <div class="g-recaptcha" data-sitekey="6Ld-ciUdAAAAANGk2hVxK4-jhSLL-lWEyiVXcwgw"></div><br>
                            </div>

                            <div style="text-align: center;">
                                <button class="app-form-button">Enviar Formulario</button>
                            </div>

                        </form>
              </div>
        </div>
    </body>
</html>