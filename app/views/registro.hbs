<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Iniciar Sesión - onesport</title>
        <link rel="stylesheet" href="/public/global.css" />
        <link rel="stylesheet" href="/public/formulario.css" />
        <link rel="stylesheet" href="/public/login.css" />
    </head>
    <body>
        <div id="app">

            <div class="app-panel app-content">

                <div class="container">
                    <div class="app-panel-logo">
                        <img src="/public/imagenes/logo.jpeg" width="150px" alt="" />
                    </div>

                    <div class="app-section-title">
                        <h2>Registrarse</h2>
                    </div>

                    <div class="app-form">
                        <form action="" method="POST">

                            {{#if error}}
                                <div class="app-form-alert">
                                    <p>{{error}}</p>
                                </div>

                            {{/if}}

                            <div class="app-form-input">
                                <label for="nombre">Nombre</label>
                                <input name="nombre" type="text" />
                            </div>

                            <div class="app-form-input">
                                <label for="email">Correo Electronico</label>
                                <input name="email" type="email" />
                            </div>

                            <div class="app-form-input">
                                <label for="password">Contraseña</label>
                                <input name="password" type="password" />
                            </div>

                            <div class="app-form-section">
                                <p>¿Ya tienes una cuenta? <a href="/login">Iniciar Sesión</a></p>
                            </div>

                            <button class="app-form-button">Registrarse</button>
                        </form>
                    </div>

                </div>
            </div>
            <div class="app-panel">
                <div class="app-panel-background__overlay">

                </div>
                <div class="app-panel-background" style="background-image: url('/public/imagenes/registro.jpg')">

                </div>
            </div>
        </div>
    </body>
</html>