<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Producto - onesport</title>
        <link rel="stylesheet" href="/public/global.css" />
        <link rel="stylesheet" href="/public/producto/estilos.css" />
    </head>
    <body>
        <div id="app">
            {{> header}}
            <main>
                <div class="middle-container">
                    <div class="producto-info-main">
                        <div id="producto-images">
                            {{#with Imagens.[0]}}
                                <img src="/public/productos-img/{{url_imagen}}" alt="" />
                            {{/with}}
                        </div>
                        <div class="producto-info">
                            <div class="producto-titulo">
                                <h1>{{ nombre }}</h1>
                                <p>${{ precio }}</p>
                            </div>
                            <div class="producto-descripcion">
                                <p>{{descripcion}}</p>
                            </div>
                        </div>
                    </div>
                    {{#if productosSugeridos}}
                        <div class="producto-suggests__content">
                            <div class="producto-suggets__title">
                                <h2>Productos Sugeridos</h2>
                            </div>
                            <div class="producto-suggests">
                                {{#each productosSugeridos}}
                                <div class="product">
                                    <a href="/producto/{{id}}">
                                        <div class="product-image">
                                            {{#with Imagens.[0]}}
                                                <img src="/public/productos-img/{{url_imagen}}" alt="" />
                                            {{/with}}
                                        </div>
                                        <div class="product-content">
                                            <div class="product-name">
                                                <p>{{nombre}}</p>
                                            </div>
                                            <div class="product-description">
                                                <p>{{descripcion}}</p>
                                            </div>
                                            <div class="product-price">
                                                <p>${{precio}}</p>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                            {{/each}}
                            </div>
                            
                        </div>
                    {{/if}}
                </div>
            </main>
        </div>
    </body>
</html>